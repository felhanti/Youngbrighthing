                                src="{{ asset('images/IMG_20240417_172439_073.jpg') }}" 
                                alt="Lookbook image 2" 
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out"
                            >
                        {% endif %}
                        <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-40 group-hover:opacity-30 transition-opacity"></div>
                    </div>
                    <div class="mt-4">
                        <h3 class="text-lg font-medium text-gray-900">Métamorphose Textile</h3>
                        <p class="text-sm text-gray-500">L'art de la transformation dans chaque couture</p>
                    </div>
                </div>
                <!-- Card 3 -->
                <div class="group relative">
                    <div class="relative w-full h-80 rounded-lg overflow-hidden bg-white shadow-md group-hover:shadow-xl transition-shadow duration-200">
                        {% if products is defined and products|length > 2 %}
                            <img 
                                src="{{ asset('images/product/' ~ products[2].imageName) }}" 
                                alt="Lookbook image 3" 
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out"
                            >
                        {% else %}
                            <img 
                                src="{{ asset('images/IMG_20240417_172439_073.jpg') }}" 
                                alt="Lookbook image 3" 
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out"
                            >
                        {% endif %}
                        <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-40 group-hover:opacity-30 transition-opacity"></div>
                    </div>
                    <div class="mt-4">
                        <h3 class="text-lg font-medium text-gray-900">Élégance Urbaine</h3>
                        <p class="text-sm text-gray-500">Le style brut rencontre le raffinement</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

