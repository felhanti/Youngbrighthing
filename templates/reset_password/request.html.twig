{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 rounded-md p-4 
                    {% if label == 'success' %}bg-green-100 text-green-800
                    {% elseif label == 'danger' or label == 'error' %}bg-red-100 text-red-800
                    {% else %}bg-blue-100 text-blue-800{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="px-4 py-5 sm:p-6">
                <h1 class="text-2xl font-bold text-gray-900 text-center mb-6 font-serif">Réinitialiser votre mot de passe</h1>

                {{ form_start(requestForm, { 'attr': {'class': 'space-y-6'} }) }}

                <div>
                    <label for="{{ requestForm.email.vars.id }}" class="block text-sm font-medium text-gray-700">Adresse e-mail</label>
                    <div class="mt-1">
                        {{ form_widget(requestForm.email, {'attr': {'class': 'shadow-sm focus:ring-yb-gold focus:border-yb-gold block w-full sm:text-sm border-gray-300 rounded-md', 'placeholder': 'Votre adresse e-mail'}}) }}
                    </div>
                    <p class="mt-1 text-sm text-gray-500">
                        Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </p>
                    {{ form_errors(requestForm.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <button class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yb-dark hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yb-gold">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                    </svg>
                    Envoyer l'email de réinitialisation
                </button>

                {{ form_end(requestForm) }}
                
                <div class="mt-4 text-center">
                    <a href="{{ path('app_login') }}" class="text-sm font-medium text-yb-dark hover:text-yb-gold">
                        Retour à la connexion
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}