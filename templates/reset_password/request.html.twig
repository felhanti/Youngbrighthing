{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="max-w-md mx-auto mt-12 px-4 sm:px-6">
    {% for label, messages in app.flashes %}
        <div class="mb-4 rounded-md p-4 {% if label == 'success' %}bg-green-100 text-green-800{% else %}bg-red-100 text-red-800{% endif %}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-8">
            <h1 class="text-2xl font-bold text-gray-900 text-center mb-6">Réinitialiser votre mot de passe</h1>

            {{ form_start(requestForm, { 'attr': {'class': 'space-y-6'} }) }}

            <div>
                <label for="{{ requestForm.email.vars.id }}" class="block text-sm font-medium text-gray-700">Adresse e-mail</label>
                <div class="mt-1">
                    {{ form_widget(requestForm.email, {'attr': {'class': 'shadow-sm focus:ring-yb-gold focus:border-yb-gold block w-full sm:text-sm border-gray-300 rounded-md', 'placeholder': 'Votre adresse e-mail'}}) }}
                </div>
                <div class="mt-1 text-sm text-gray-500">
                    Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </div>
                {{ form_errors(requestForm.email, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
            </div>

            <button class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yb-dark hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yb-gold">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Envoyer l'email de réinitialisation du mot de passe
            </button>

            {{ form_end(requestForm) }}
            
            <div class="mt-6 text-center">
                <a href="{{ path('app_login') }}" class="text-sm font-medium text-yb-dark hover:text-yb-gold">
                    Retour à la page de connexion
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}