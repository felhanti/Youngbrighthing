{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="max-w-md mx-auto mt-12 px-4 sm:px-6">
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-8">
            <h1 class="text-2xl font-bold text-gray-900 text-center mb-6">Réinitialiser votre mot de passe</h1>

            {{ form_start(resetForm, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                <label for="{{ resetForm.plainPassword.first.vars.id }}" class="block text-sm font-medium text-gray-700">Nouveau mot de passe</label>
                <div class="mt-1">
                    {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'shadow-sm focus:ring-yb-gold focus:border-yb-gold block w-full sm:text-sm border-gray-300 rounded-md', 'placeholder': 'Entrez votre nouveau mot de passe'}}) }}
                </div>
                {{ form_errors(resetForm.plainPassword.first, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
            </div>

            <div>
                <label for="{{ resetForm.plainPassword.second.vars.id }}" class="block text-sm font-medium text-gray-700">Répéter le mot de passe</label>
                <div class="mt-1">
                    {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'shadow-sm focus:ring-yb-gold focus:border-yb-gold block w-full sm:text-sm border-gray-300 rounded-md', 'placeholder': 'Confirmez votre mot de passe'}}) }}
                </div>
                {{ form_errors(resetForm.plainPassword.second, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
            </div>

            <button class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yb-dark hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yb-gold">
                Réinitialiser le mot de passe
            </button>

            {{ form_end(resetForm) }}
            
            <div class="mt-6 text-center">
                <a href="{{ path('app_login') }}" class="text-sm font-medium text-yb-dark hover:text-yb-gold">
                    Retour à la page de connexion
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}