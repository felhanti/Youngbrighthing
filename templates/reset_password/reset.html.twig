{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        
        <div class="mb-3">
            <label for="password" class="form-label">Nouveau mot de passe</label>
            <div class="input-group">
                {{ form_widget(resetForm.plainPassword) }}
            </div>
        </div>

        <div class="d-grid gap-2">
            <button class="btn btn-primary" type="submit">Réinitialiser le mot de passe</button>
        </div>
        
        {{ form_end(resetForm) }}
    </div>
{% endblock %}