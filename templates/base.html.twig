<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset("styles/app.css") }}">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
		{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		<header>
			<!-- Navigation principale -->
			<nav
				class="color white d-flex justify-content-between align-items-center">
				<!-- Container gauche pour le logo et burger -->
				<div
					class="d-flex align-items-center">
					<!-- Bouton hamburger visible uniquement sur tablette et mobile -->
					<a class="d-lg-none me-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
						<img src="{{ asset('assets/svg/burger.svg') }}" width="50" height="50" alt="Menu"/>
					</a>
					<!-- Logo -->
					<a href="{{ path('home')}}" class="navbar-brand">
						<img class="logo" src="{{ asset('images/LOGO_ybt-01_72c34f78-1ef2-4c5c-a378-735dffc185cb.png') }}" alt="LOGO" height="70"/>
					</a>
				</div>

				<!-- Menu icônes à droite -->
				<div>
					{% if app.user %}
						{% if 'ROLE_ADMIN' in app.user.roles %}
							<a class="navbar-brand p-2" href="{{ path('app_admin_dashboard') }}">
								<img src="{{ asset('assets/svg/gear.svg') }}" width="50" height="50" alt="Administrateur"/>
							</a>
						{% endif %}
						<a class="navbar-brand p-2" href="{{ path('app_account') }}">
							<img src="{{ asset('assets/svg/account.svg') }}" width="50" height="50" alt="Account"/>
						</a>

						<a class="navbar-brand p-2" href="{{ path('app_logout') }}">
							<img src="{{ asset('assets/svg/logout.svg') }}" width="50" height="50" alt="Logout"/>
						</a>

						{% if app.user %}
							{% set cart = app.user.carts|first %}
							{% if cart %}
								<a class="navbar-brand p-2" href="{{ path('app_cart_show', { 'id': cart.id }) }}">
									<img src="{{ asset('assets/svg/cart.svg') }}" width="50" height="50" alt="Panier"/>
								</a>
							{% else %}
								<a class="navbar-brand p-2">
									<img src="{{ asset('assets/svg/cart.svg') }}" width="50" height="50" alt="Panier"/>
								</a>

							{% endif %}
						{% endif %}
					{% else %}
						<a class="navbar-brand p-2 color-gold" href="{{ path('app_login')}}">
							<img src="{{ asset('assets/svg/person.svg') }}" width="50" height="50" alt="Login"/>
						</a>
					{% endif %}
				</div>
			</nav>

			<!-- Menu de navigation -->
			<!-- Version mobile/tablette (collapse) -->
			<nav class="navbar p-0 bg-dark d-lg-none">
				<div class="container-fluid">
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav">
							<li>
								<a class="nav-link text-gold" href="{{ path('app_collection_all') }}">Collections</a>
							</li>
							<li>
								<a class="nav-link text-gold" href="{{ path('app_campagne') }}">Campagne</a>
							</li>
							<li>
								<a class="nav-link text-gold" href="{{ path('app_histoire') }}">Histoire</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>

			<!-- Version desktop (toujours visible) -->
			<nav class="navbar-menu bg-dark text-gold d-none d-lg-flex align-items-center">
				<div class="container-fluid">
					<ul class="navbar-nav d-flex flex-row justify-content-center gap-5 w-100">
						<li>
							<a class="nav-link fs-3" href="{{ path('app_collection_all') }}">Collections</a>
						</li>
						<li>
							<a class="nav-link fs-3" href="{{ path('app_campagne') }}">Campagne</a>
						</li>
						<li>
							<a class="nav-link fs-3" href="{{ path('app_histoire') }}">Histoire</a>
						</li>
					</ul>
				</div>
			</nav>
		</header>

		<main class="flex-fill"> {% block body %}{% endblock %}
			</main>

			<!-- Footer -->
			<footer class="bg-dark text-white text-center">
				<div
					class="container py-2">
					<!-- Informations légales -->
					<div class="row">
						<div class="col-md-6">
							<h5 class="text-gold">Informations légales</h5>
							<ul class="list-unstyled">
								<li>
									<a href="{{ path('app_cgv_cgu') }}" class="text-white">CGU</a>
								</li>
								<li>
									<a href="{{ path('app_cgv_confidentialite') }}" class="text-white">Confidentialité</a>
								</li>
								<li>
									<a href="{{ path('app_cgv_mentions_legales') }}" class="text-white">Mentions légales</a>
								</li>
								<li>
									<a href="{{ path('app_cgv_retour') }}" class="text-white">Conditions de retour</a>
								</li>
							</ul>
						</div>


						<!-- Restez connecté -->
						<div class="col-md-6">
							<h5 class="mb-3 text-gold">Suivez-nous</h5>
							<a href="https://www.instagram.com/youngbrighthing/" target="_blank" class="d-inline-block">
								<img src="{{ asset('assets/svg/instagram.svg') }}" alt="Instagram" style="width: 50px; height: 50px;"/>
							</a>
							<p class="mt-2">Retrouvez-nous sur Instagram</p>
						</div>
					</div>
				</div>

				<div class="text-center text-gold mt-1 mb-2">
					<p class="mb-0">&copy;
						{{ "now"|date("Y") }}
						Youngbrighthing. Tous droits réservés.</p>
				</div>
			</div>
		</body>
	</html>
</footer></body></html>
