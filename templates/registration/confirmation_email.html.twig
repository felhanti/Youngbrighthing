{% block body %}
	<div style="font-family: Arial, sans-serif; background-color: #f9f9f9; padding: 20px;">
		<div style="max-width: 600px; margin: auto; background: #ffffff; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); overflow: hidden;">
			<div style="background-color: #007bff; color: white; text-align: center; padding: 20px;">
				<h1 style="margin: 0; font-size: 24px;">Confirmez votre email</h1>
			</div>
			<div style="padding: 20px; color: #333;">
				<p style="font-size: 16px;">Bonjour,</p>
				<p style="font-size: 16px; line-height: 1.5;">
					Veuillez confirmer votre adresse email en cliquant sur le bouton ci-dessous :
				</p>
				<div style="text-align: center; margin: 20px 0;">
					<a href="{{ signedUrl|raw }}" style="background-color: #007bff; color: white; text-decoration: none; padding: 10px 20px; font-size: 16px; border-radius: 5px; display: inline-block;">
						Confirmer mon Email
					</a>
				</div>
				<p style="font-size: 14px; color: #555;">
					Ce lien expirera dans
					<strong>{{ expiresAtMessageKey|trans(expiresAtMessageData, 'VerifyEmailBundle') }}</strong>
					heure(s).
				</p>
				<p style="font-size: 16px;">Cordialement,<br>
					L'équipe de support de Youngbrighthing</p>
			</div>
			<div style="background-color: #f1f1f1; text-align: center; padding: 10px; font-size: 12px; color: #888;">
				<p style="margin: 0;">Cet email a été envoyé automatiquement, merci de ne pas répondre.</p>
			</div>
		</div>
	</div>
{% endblock %}
