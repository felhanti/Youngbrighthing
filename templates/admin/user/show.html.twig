{% extends 'base.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}

{% block body %}
	<div class="container  mt-4">
		<h1>Utilisateur n°
			{{user.id}}</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.nom }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ user.prenom }}</td>
				</tr>
				<tr>
					<th>Date de naissance</th>
					<td>{{ user.birthDate ? user.birthDate|date('d/m/Y') : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-info mr-1" href="{{ path('app_admin_user_index') }}">Retour à la liste</a>

		<a class="btn btn-warning m-1" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>

		{{ include('admin/user/_delete_form.html.twig') }}
	</div>

{% endblock %}
