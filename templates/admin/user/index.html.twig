{% extends 'base.html.twig' %}

{% block title %}Index utilisateurs
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Gestion des utilisateurs</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Date de naissance</th>
					<th>Rôles</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.nom }}</td>
						<td>{{ user.prenom }}</td>
						<td>{{ user.birthDate ? user.birthDate|date('d/m/Y') : '' }}</td>

						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>
							<a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-info">Voir</a>
							<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
							{{ include('admin/user/_delete_form.html.twig') }}

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucun utilisateur trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_admin_user_new') }}" class="btn btn-primary m-1">Créer un nouvel utilisateur</a>
	</div>
{% endblock %}
