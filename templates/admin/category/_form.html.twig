
{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

<div class="space-y-6">
    <!-- Nom de la catégorie -->
    <div>
        {{ form_label(form.name, 'Nom de la catégorie', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'shadow-sm focus:ring-yb-gold focus:border-yb-gold block w-full sm:text-sm border-gray-300 rounded-md'}}) }}
        {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
    </div>

    <!-- Last Drop -->
    <div>
        {{ form_label(form.last, 'Catégorie Last Drop', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.last, {'attr': {'class': 'shadow-sm focus:ring-yb-gold focus:border-yb-gold block w-full sm:text-sm border-gray-300 rounded-md'}}) }}
        <p class="mt-1 text-xs text-gray-500">Les produits dans une catégorie "Last Drop" sont mis en avant sur la page d'accueil.</p>
        {{ form_errors(form.last, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
    </div>

    <!-- Bouton de soumission -->
    <div class="pt-4">
        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yb-dark hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yb-gold">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
</div>

{{ form_end(form) }}