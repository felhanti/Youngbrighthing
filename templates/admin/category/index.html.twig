{% extends 'base.html.twig' %}

{% block title %}Gestion des categories
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Gestion des categories</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.Name }}</td>
						<td>
							<a href="{{ path('app_admin_category_show', {'id': category.id}) }}" class="btn btn-info">Voir</a>
							<a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-warning">Modifier</a>
							{{ include('admin/category/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_admin_category_new') }}" class="btn btn-primary m-1">Nouvelle cat√©gorie</a>
	</div>
{% endblock %}
